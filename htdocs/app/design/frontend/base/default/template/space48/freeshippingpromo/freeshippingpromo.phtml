<?php $limits = Mage::getModel('freeshippingpromo/freeshippingpromo')->getLimits(); ?>
<?php if( ($limits['lowerLimit'] < $limits['cartTotal']) && ($limits['cartTotal'] < $limits['upperLimit']) ): ?>
	<div id="cart-freeshipping-promo">
	<?php $spend = Mage::helper('core')->currency(($limits['upperLimit'] - $limits['cartTotal']), true, false); ?>
		<?php echo $this->__('Spend %1$s more to get Free Delivery',$spend); ?>
	</div>

<script>
    jQuery(document).ready(function($) {
        if($('#cart-freeshipping-promo').length > 0) {
            $('#cart-freeshipping-promo').animate({opacity: '1'}, '75');
        }
    });
</script>

<?php endif; ?>