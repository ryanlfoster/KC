<?xml version="1.0"?>

<layout version="0.1.0">

    <default>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/colorbox/colorbox-popup.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/jjm/sitepopup/popup.css</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery/libs/jquery.colorbox-min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jjm/sitepopup/popup.js</name></action>
        </reference>

        <reference name="content">
            <block type="JJM_Sitepopup/popup" name="site.popup" before="-" template="sitepopup/popup.phtml" >
                <block type="newsletter/subscribe" name="popup.newsletter" before="-" template="newsletter/subscribe.phtml"/>
            </block>
        </reference>
    </default>

</layout>