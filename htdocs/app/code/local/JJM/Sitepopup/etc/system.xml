<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <JJM_Sitepopup translate="label" module="JJM_Sitepopup">
            <label>Site Popup</label>
            <tab>kidscavern</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Site Popup Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <popupenabled>
                            <label>Popup Enabled</label>
                            <comment>Display Popup or not</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </popupenabled>
                        <popupurl>
                            <label>Popup URL</label>
                            <comment>Enter the URL popup will link to</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </popupurl>
                        <popupimage>
                            <label>Popup Image</label>
                            <comment>Upload image to be displayed in popup</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">jjm/sitepopup</upload_dir>
                            <base_url type="media" scope_info="1">jjm/sitepopup</base_url>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </popupimage>
                    </fields>
                </settings>
            </groups>
        </JJM_Sitepopup>
    </sections>
</config>